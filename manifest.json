{

  "manifest_version": 2,
  "name": "notion-app-redirector",
  "description": "Open notion documents with your desktop application directly",
  "version": "1.2.0",

  "permissions": ["webRequest", "webRequestBlocking", "*://*.notion.so/*", "storage"],

  "browser_action": {
    "browser_style": true,
    "default_popup": "src/popup.html",
    "default_icon": {
      "48": "res/icon.png"
    }
  },

  "background": {
    "scripts": ["src/settings.js", "src/background.js"]
  }

}
